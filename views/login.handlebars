<div class="row red lighten-4 center">
        <div class="col s6 offset-s3">
            <div class="card-panel">
                <div class="login-form">
                    <form class="form signin-form">
                        <div class="input-group">
                            <label for="signin">Email:</label>
                            <input type="text" name="email" id="email-signin" />
                        </div>
                        <div class="form-group">
                            <label for="password-signin">Password:</label>
                            <input class="form-input" type="password" id="password-signin" />
                        </div>
                        <div class="card-action form-group">
                            <button class="btn waves-effect waves-light grey-darken-4" type="submit" name="action">Sign In</button>
                            <span>or</span>
                            <a href="./signup" class="btn waves-effect waves-light grey-darken-4" id="signUp-btn">Sign Up</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
</div>

<script src="./js/signin.js"></script>